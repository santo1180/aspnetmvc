<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="~/Content/ext-4.2.0.663/resources/css/ext-all.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/ext-4.2.0.663/resources/css/GridFilters.css" rel="stylesheet" />
        <link href="~/Content/ext-4.2.0.663/resources/css/RangeMenu.css" rel="stylesheet" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")  

    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body"  >
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/knockout")     
        <script type="text/javascript" src="~/Content/ext-4.2.0.663/ext-all-debug.js" ></script>
        <script type="text/javascript" src="~/Content/ext-4.2.0.663/ListMenu.js"></script>
        <script type="text/javascript" src="~/Content/ext-4.2.0.663/RangeMenu.js"></script>
        <script type="text/javascript" src="~/Content/ext-4.2.0.663/BooleanFilter.js"></script>
        <script type="text/javascript" src="~/Content/ext-4.2.0.663/DateFilter.js"></script>
        <script type="text/javascript" src="~/Content/ext-4.2.0.663/DateTimeFilter.js"></script>
        <script type="text/javascript" src="~/Content/ext-4.2.0.663/ListFilter.js"></script>
        <script type="text/javascript" src="~/Content/ext-4.2.0.663/NumericFilter.js"></script>
        <script type="text/javascript" src="~/Content/ext-4.2.0.663/StringFilter.js"></script>
        <script type="text/javascript" src="~/Content/ext-4.2.0.663/Filter.js"></script>     
        @RenderSection("scripts", required: false)
    </body>
</html>
